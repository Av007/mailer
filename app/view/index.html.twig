{% extends 'base.html.twig' %}

{%  block header %}
    <h1>{{ 'send_mail'|trans }}</h1>
{% endblock %}

{%  block content %}
    {% if errors|length > 0 %}
        <div class="errors">
            <h3><i></i>{{ 'user_errors'|trans }}</h3>
            <ul>
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <div class="comment">
        <div class="content margin">
            <pre>{{ 'tip'|trans }}</pre>

            <form action="{{ path('home') }}" method="post">
                {{ form_widget(form) }}
                <input type="submit" name="send" value="{{ 'send'|trans }}" class="button"/>
            </form>
        </div>
    </div>
{% endblock %}
